<?xml version="1.0"?>
<component name="org.nuxeo.uidgen.es.contrib">

  <extension target="org.nuxeo.elasticsearch.ElasticSearchComponent"
    point="elasticSearchIndex">

    <elasticSearchIndex name="uidgen" type="seqId" >

    <settings>
      {
        "number_of_shards"     : 1,
        "auto_expand_replicas" : "0-all"
      }
    </settings>

    <mapping>
      {
        "_source" : {"enabled": false},
        "_all"    : {"enabled": false},
        "_type"   : {"index": "no"},
        "enabled" : false
      }
    </mapping>

    </elasticSearchIndex>

  </extension>

</component>
